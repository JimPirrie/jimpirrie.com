{# this page is the framework: content is in the included file #}
{% extends "_page.html.twig" %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col">
                {% if blogPostId %}
                    <a href="/blog">Blog Home</a> <i class="fa-regular fa-arrow-right-long"></i> <strong>{{ post.title }}</strong>
                {% else %}
                    <strong>Blog Home</strong>
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-9">
                {% include(contentTemplate) %}
            </div>
            <div class="col-3">
                <div class="blog-sidebar">
                    {% if sidebarFeaturedList %}
                        <div class="mb-2">
                            <strong>Popular posts</strong>
                        </div>
                        {% for post in sidebarFeaturedList %}
                            <div class="mb-4">
                                <div class="box-16x9" style="background-image: url('{{ post.seoImage }}'); background-size: contain; background-position: center; background-repeat: no-repeat;">
                                    <div class="box-inner">
                                        <div class="box-content" style="background-image: url('/_images/{{ post.seoImage }}'); background-size: contain; background-repeat: no-repeat;background-position: center;">
                                        </div>
                                    </div>
                                </div>
                                {{ post.title }}
                            </div>
                        {% endfor %}
                    {% endif %}
                    {% if sidebarOtherList %}
                        <hr>
                        <div class="mb-2">
                            <strong>Posts you might like</strong>
                        </div>
                        {% for post in sidebarOtherList %}
                            <div class="mb-4">
                                <div class="box-16x9" style="background-image: url('{{ post.seoImage }}'); background-size: contain; background-position: center;">
                                    <div class="box-inner">
                                        <div class="box-content" style="background-image: url('/_images/{{ post.seoImage }}'); background-size: contain; background-repeat: no-repeat;background-position: center;">
                                        </div>
                                    </div>
                                </div>
                                {{ post.title }}
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}