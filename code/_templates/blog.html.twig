{# this page is the framework: content is in the included file #}
{% extends "_page.html.twig" %}
{% block content %}
    <div class="container">
        <div class="row pb-3">
            <div class="col px-0 pt-3" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                {% if blogPostId %}
                    <a href="">home</a> <i class="fa-regular fa-arrow-right-long"></i> <a href="/blog">blog</a> <i class="fa-regular fa-arrow-right-long"></i> <strong>{{ post.title }}</strong>
                {% else %}
                    <a href="">home</a> <i class="fa-regular fa-arrow-right-long"></i> <strong>blog</strong>
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-9">
                {% include(contentTemplate) %}
            </div>
            <div class="col-3 blog-sidebar">
                <strong>Follow Jim</strong>
                <div class="text-center">
                    <!-- Go to www.addthis.com/dashboard to customize your tools -->
                    <div class="addthis_inline_follow_toolbox d-inline-block"></div>
                </div>
                <hr>
                {% if sidebarFeaturedList %}
                    <div class="mb-2">
                        <strong>Popular posts</strong>
                    </div>
                    {% for post in sidebarFeaturedList %}
                        <div class="mb-4">
                            <a href="/blog/{{ post.blogPost_id }}/{{ post.slug }}">
                                <div class="box-border">
                                    <div class="box-16x9" style="background-image: url('{{ post.seoImage }}'); background-repeat: no-repeat; background-position: center; background-size: contain">
                                        {% if post.isVideo %}<div class="videoThumbnailOverlay"></div>{% endif %}
                                        <div class="box-inner"><div class="box-content"></div></div>
                                    </div>
                                </div>
                            </a>
                            <a class="d-block text-center" href="/blog/{{ post.blogPost_id }}/{{ post.slug }}">{{ post.title }}</a>
                        </div>
                    {% endfor %}
                {% endif %}
                {% if tags %}
                    <div class="mb-2">
                        <strong>Tags</strong>
                    </div>
                    <div class="text-center">
                        {% for tag in tags %}
                            <a class="btn {% if activeTag == tag %}btn-success{% else %}btn-primary{% endif %} px-1 py-0 mt-1" style="font-size: 12px;" href="/blog/?tag={{ tag }}">{{ tag }}</a>
                        {% endfor %}
                        {% if activeTag %}
                            <a class="btn btn-warning px-1 py-0 d-block mx-5 mt-2" style="font-size: 12px;" href="/blog/?cleartags=1">clear tags</a>
                        {% endif %}
                    </div>
                {% endif %}
                {% if sidebarOtherList %}
                    <hr>
                    <div class="mb-2">
                        <strong>Posts you might like</strong>
                    </div>
                    {% for post in sidebarOtherList %}
                        <div class="mb-4">
                            <a href="/blog/{{ post.blogPost_id }}/{{ post.slug }}">
                                <div class="box-border">
                                    <div class="box-16x9" style="background-image: url('{{ post.seoImage }}'); background-repeat: no-repeat; background-position: center; background-size: contain">
                                        {% if post.isVideo %}<div class="videoThumbnailOverlay"></div>{% endif %}
                                        <div class="box-inner"><div class="box-content"></div></div>
                                    </div>
                                </div>
                            </a>
                            <a class="d-block text-center" href="/blog/{{ post.blogPost_id }}/{{ post.slug }}">{{ post.title }}</a>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
    <div style="height: 200px;"></div>
{% endblock %}