{% extends "_page.html.twig" %}
{% block content %}
    <div class="row">
        <div class="col page-banner" style="height: 300px;background-image: url('/_images/carousel-waterfall.png');">
            <div class="page-banner-content">
                <h4 class="pt-5"><span class="mv-dynamic mv-item-type" data-itemref="{{ mv_ref }}"></span></h4>
                <h1 class="pt-2"><span class="mv-dynamic mv-item-name" data-itemref="{{ mv_ref }}"></span></h1>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-8 pt-3" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                <a href="/">home</a> <i class="fa-regular fa-arrow-right-long"></i> <span class="mv-dynamic mv-item-type" data-itemref="{{ mv_ref }}"></span> <i class="fa-regular fa-arrow-right-long"></i> <strong><span class="mv-dynamic mv-item-name" data-itemref="{{ mv_ref }}"></span></strong>
            </div>
            <div class="col-12 col-lg-4">
                <table class="float-end">
                    <tr>
                        <td>
                            <strong>Follow Jim:</strong>
                        </td>
                        <td>
                            <!-- Go to www.addthis.com/dashboard to customize your tools -->
                            <div class="addthis_inline_follow_toolbox d-inline-block"></div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col pt-5">
                    <div class="m-auto text-center p-5" style="border: solid lightgray 1px; border-radius: 5px; max-width: 600px;">
                        <p>
                            <span class="mv-dynamic mv-item-type" data-itemref="{{ mv_ref }}"></span>
                        </p>
                        <p>
                            <span class="mv-dynamic mv-item-name" data-itemref="{{ mv_ref }}"></span>
                        </p>
                        <div id="mv-fulfilment" class="pt-5" data-itemref="{{ mv_ref }}">fulfilment</div>
                    </div>

                </div>
            </div>
        </div>
        <div style="height: 200px;"></div>
    </div>
{% endblock %}