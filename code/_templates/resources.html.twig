                    <div class="col" style="padding: 0 5% 0 5%;">
                        <div class="row">
                            <div class="col col-md-3">
                                <h3 class="d-md-none"><span class="mv-item-name"></span></h3>
                                <img class="mv-item-image img-fluid">
                                <div class="mv-item-description py-3 d-md-none"></div>
                            </div>
                            <div class="d-none d-md-block col-9">
                                <h3><span class="mv-item-name" data-ref="{{ mv_ref }}"></span></h3>
                                <div class="mv-item-description py-3"></div>
                            </div>
