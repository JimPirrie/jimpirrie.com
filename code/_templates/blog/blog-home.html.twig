<div class="row">
    <div class="col ps-0">
        {% if mainList %}
            {% for post in mainList %}
                <div class="p-3 mb-3 d-none d-md-block" style="background-color: whitesmoke; border-radius: 5px;">
                    <div class="row">
                        <div class="col-5">
                            <a href="/blog/{{ post.blogPost_id }}/{{ post.slug }}">
                                <div class="box-border">
                                    <div class="box-16x9" style="background-image: url('{{ post.seoImage }}'); background-repeat: no-repeat; background-position: center; background-size: contain">
                                        {% if post.isVideo %}<div class="videoThumbnailOverlay"></div>{% endif %}
                                        <div class="box-inner"><div class="box-content"></div></div>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col-7 pe-5">
                            <h5><a href="/blog/{{ post.blogPost_id }}/{{ post.slug }}">{{ post.title }}</a></h5>
                            <p>
                                "{{ post.seoDescription }}"
                            </p>
                            <p class="text-right">
                                <a href="/blog/{{ post.blogPost_id }}/{{ post.slug }}">read more...</a>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="p-3 mb-3 d-block d-md-none" style="background-color: whitesmoke; border-radius: 5px;">
                    <div class="row">
                        <div class="col">
                            <a href="/blog/{{ post.blogPost_id }}/{{ post.slug }}">
                                <div class="box-border">
                                    <div class="box-16x9" style="background-image: url('{{ post.seoImage }}'); background-repeat: no-repeat; background-position: center; background-size: contain">
                                        {% if post.isVideo %}<div class="videoThumbnailOverlay"></div>{% endif %}
                                        <div class="box-inner"><div class="box-content"></div></div>
                                    </div>
                                </div>
                            </a>
                            <h5><a href="/blog/{{ post.blogPost_id }}/{{ post.slug }}">{{ post.title }}</a></h5>
                            <p>
                                "{{ post.seoDescription }}"
                            </p>
                            <p class="text-right">
                                <a href="/blog/{{ post.blogPost_id }}/{{ post.slug }}">read more...</a>
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% elseif activeTag %}
            <div class="py-5 text-center">
                active tag: <span class="btn btn-success px-2 py-0" style="font-size: 12px;">{{ activeTag }}</span><br><br><br>no posts to show <a class="btn btn-warning px-2 py-0" style="font-size: 12px;" href="/blog/?cleartags=1">clear tags</a>
            </div>
        {% endif %}
    </div>
</div>